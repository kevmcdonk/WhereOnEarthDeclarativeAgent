{
    "$schema": "https://aka.ms/json-schemas/copilot/declarative-agent/v1.0/schema.json",
    "version": "v1.0",
    "name": "WoEAgent${{APP_NAME_SUFFIX}}",
    "description": "This declarative agent lets people join in with the Where On Earth game.",
    "instructions": "$[file('instruction.txt')]",
    "conversation_starters": [
        {
            "title": "Start game",
            "text": "Initiate the daily game."
        },
        {
            "text": "Find image"
        },
        {
            "text": "Select image"
        },
        {
            "text": "End game"
        },
        {
            "title": "Check Status",
            "text": "What is the status of the game?"
        }
    ],
    "actions": [
        {
            "id": "woePlugin",
            "file": "ai-plugin.local.json"
        }
    ]
}